{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            {{ form_start(registrationForm, {'attr': {'class': 'border p-4 rounded shadow-sm bg-light'}}) }}
                <h1 class="h4 text-center mb-4">S'inscrire</h1>

                {{ form_row(registrationForm.email, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez votre email'
                    }
                }) }}

                {{ form_row(registrationForm.username, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez votre username'
                    }
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez votre mot de passe'
                    }
                }) }}

                {{ form_row(registrationForm.submit, {
                    'attr': {
                        'class': 'btn btn-primary btn-lg w-100'
                    }
                }) }}

            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <p>Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
