{% extends 'base.html.twig' %}

{% block title %}Page Admin{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Page d'Admin avec des éléments rouges pour simuler un endroit dangereux -->
    <nav class="navbar navbar-dark bg-danger mb-4">
        <div class="container">
            <h1 class="text-white">Page Admin</h1>
        </div>
    </nav>

    <!-- Section de données sensibles -->
    <div class="alert alert-danger">
        <h3 class="text-center">ATTENTION : Données Sensibles !</h3>
        <p><strong>Nom :</strong> Laurent Bouquet</p>
        <p><strong>Email :</strong> laurent.bouquet@joliciel.fr</p>
        <p><strong>Numéro de carte bancaire :</strong> 1234-5678-9876-5432</p>
        <p><strong>Adresse :</strong> Quelques part en Normandie</p>
        <p><strong>Numéro de sécurité sociale :</strong> 123-45-6789</p>
    </div>

    <!-- Section des actions administratives dangereuses -->
    <div class="alert alert-warning">
        <h3>Actions dangereuses :</h3>
        <button class="btn btn-danger btn-lg mb-3">Supprimer toutes les données utilisateurs</button>
        <button class="btn btn-danger btn-lg mb-3">Supprimer la base de données</button>
        <button class="btn btn-danger btn-lg mb-3">Envoyer un email à tous les utilisateurs</button>
    </div>

    <!-- Section des logs -->
    <div class="alert alert-info">
        <h3>Logs du système :</h3>
        <p><strong>Erreur :</strong> Impossible de récupérer les données de l'utilisateur 12345.</p>
        <p><strong>Avis :</strong> Tentative de suppression des fichiers système détectée.</p>
        <p><strong>Warning :</strong> Accès non autorisé à la section de données sensibles.</p>
    </div>

    <!-- Section de modification de paramètres -->
    <div class="alert alert-danger">
        <h3>Modification des paramètres système :</h3>
        <button class="btn btn-danger btn-lg mb-3">Modifier la configuration de sécurité</button>
        <button class="btn btn-danger btn-lg mb-3">Réinitialiser le mot de passe administrateur</button>
        <button class="btn btn-danger btn-lg mb-3">Activer le mode débogage</button>
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_public') }}" class="btn btn-dark">Retour à la page publique</a>
    </div>
</div>

<script>
    // Script pour des actions fictives qui "alertent" l'utilisateur quand il clique
    const dangerousButtons = document.querySelectorAll('.btn-danger');
    dangerousButtons.forEach(function(button) {
        button.addEventListener('click', function() {
            alert('Cette action est dangereuse ! Les modifications seront irréversibles.');
        });
    });
</script>
{% endblock %}
